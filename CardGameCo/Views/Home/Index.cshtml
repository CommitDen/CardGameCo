@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.Rendering;
@using Microsoft.AspNetCore.Mvc.ViewFeatures;
@using CardGameCo.Controllers;

@model User

<div class="container my-auto">
    <div class="row h-100 align-items-center">
        <div class="col-12">
            <div class="row text-center">
                <h1 class="text-white mt-3">CardGameCo</h1>
            </div>
            <div class="text-white row mt-3">
                <hr class="col-md-4 offset-md-4"/>
            </div>
            <div class="row">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="col-md-4 offset-md-4 mt-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label text-white" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
                    </div>

                    <div class="col-md-4 offset-md-4 mt-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label text-white" })
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control passwordInput" })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="mt-5 btn-lg btn-primary col-md-3">Login</button>
                    </div>
                }
            </div>
            <div class="row">
                <label class="text-white text-center mt-2">Not a member yet?</label>
                @Html.ActionLink("Sign Up", "SignUp", "Home", new { }, new { @class = "text-center" })
            </div>
        </div>
    </div>
</div>